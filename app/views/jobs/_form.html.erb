<%= form_for job do |f| %>

  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :skills %>
    <%= f.text_area :skills %>
  </p>

  <p>
    <%= f.label :position %>
    <%= f.collection_select :position, job_attribute_positions_hash, 
                            :first, :second %>
  </p>

  <p>
    <%= f.label :min_wage %>
    <%= f.number_field :min_wage, step: 1 %>
    
    <%= f.label :max_wage %>
    <%= f.number_field :max_wage, step: 1 %>
  </p>

  <p>
    <%= f.label :deadline %>
    <%= f.date_field :deadline %>
  </p>

  <p>
    <%= f.label :location %>
    <%= f.text_field :location %>
  </p>

  <p>
    <%= f.submit t('.submit') %>
  </p>
<% end %>