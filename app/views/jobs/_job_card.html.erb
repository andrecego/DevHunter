<div class="card">
  <div class="card-body">
    <h5 class="card-title"><%= link_to job.title, job_path(job) %></h5>
    <h6 class="card-subtitle mb-2 text-muted"><%= job.position %></h6>
    <p class="card-text"><%= job.description %></p>
    <div class="card-footer text-muted"><%= l(job.deadline) %></div>
  </div>
</div>