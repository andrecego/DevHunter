<div class="form-inline right mr-5 mb-3">
  <%= form_with url: search_jobs_path, local: true, method: :get do %>
    <%= search_field_tag :q, nil, placeholder: t('.search_for_jobs'), class:'form-control mr-sm-2' %>
    <%= submit_tag t('.search'), class: 'btn btn-outline-success my-2 my-sm-0' %>
  <% end %>
</div>