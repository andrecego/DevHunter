<%= form_for [@profile, @comment] do |f| %>

  <div class="form-group">
    <%= content_tag(:p, current_hunter.email) %>
  </div>

  <div class="form-group">
    <%= f.label :body, t('.comment') %>
    <%= f.text_area :body, class: 'form-control' %>
  </div>

  <%= f.submit t('.submit'), class: 'btn btn-blue float-right' %>
<% end %>