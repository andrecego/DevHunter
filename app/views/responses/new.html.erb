<%= render 'jobs/job_full', job: @inscription.job %>
<%= render @approval %>

<div class="col-lg-8">
  <%= form_for [@inscription, @approval, @response] do |f| %>
    <div class="form-group">
      <%= f.label :comment %>
      <%= f.text_area :comment, class: 'form-control' %>
    </div>
  
    <%= f.submit t('.accept'), class: 'btn btn-green float-right' %>
  <% end %>
</div>